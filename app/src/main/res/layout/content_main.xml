<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rpsgame.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:id="@+id/playResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Play Rock Paper Scissors Game!"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/position2Image"
        android:layout_marginTop="90dp"
        android:src="@drawable/rps_1"
        android:layout_below="@+id/playResult"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/position1Image"
        android:src="@drawable/rps_1"
        android:layout_alignTop="@+id/position2Image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Player 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Player1"
        android:layout_alignRight="@+id/position1Image"
        android:layout_alignEnd="@+id/position1Image"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_above="@+id/position1Image"
        android:paddingBottom="7dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Player 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Player2"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_alignBaseline="@+id/Player1"
        android:layout_alignBottom="@+id/Player1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>


